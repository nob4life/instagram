<div>
  <div class="container overflow-hidden">
      <h1 class="text-center"><%= title %></h1>
        <div class="mh-100" style="width: 800px;">

        <% post.posts.each do |post| %> 
        <br/>
        <div class="text-bg-secondary p-3">
        <h4><%= link_to post.title, post %></h4>
        <p><%= truncate(post.body, length: 150) %></p>
        <%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
        <% end %>
    </div>
  </div>
</div>