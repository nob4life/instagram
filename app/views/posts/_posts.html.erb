<h1><%= title %></h1>

      <% posts.each do |post| %> 
      <%= image_tag(post.image.url, alt: 'Image', size: "192x258",class:"rounded mx-auto d-block") if post.image? %>
      <br/>
      <div class="text-center">
      <%= link_to post.title, post %>
      <br/>
      <%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
     </div>

    <% end %>
